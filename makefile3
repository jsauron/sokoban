NAME = sokoban

ID_UN = $(shell id -un)

SRCS_DIR = srcs/
OBJS_DIR = objs/

SRC_NAME = srcs/main.c \
	  srcs/jeu.c \
	  srcs/files.c \
	  srcs/editor.c 

OBJ_NAME = $(SRC_NAME:.c=.o)

INCLUDES = includes/

SRC = $(addprefix $(SRCS_DIR), $(SRC_NAME))
OBJ = $(addprefix $(OBJS_DIR, $(OBJ_NAME))
INC = $(addprefix -I, $(INCLUDES))

SDL2 = -L/Users/$(ID_UN)/.brew/lib/ -lSDL2 -lSDL2_ttf -lSDL2_image

DEBUG = -g -fsanitize=address

DONE = "\033[35m LS READY \033[0m"

all: $(NAME)

$(NAME): $(OBJS)
	@gcc -Wall -Wextra -Werror -o $(NAME) $(OBJS) -I $(INCLUDES)  $(INC) $(SDL2) $(DEBUG)
	@echo $(DONE)

$(OBJS) : | $(OBJS_DIR)

$(OBJS_DIR) : 
				@mkdir objs

%.o: %.c $(INCLUDES)sokoban.h  Makefile
		@gcc -Wall -Wextra -Werror -o $@ -c $<


clean:
	@rm -f $(OBJS_DIR) 
	@echo "\033[35m CLEAN DONE \033[0m"

fclean: clean
	@rm -f $(NAME)  
	@echo "\033[35m FCLEAN DONE \033[0m"

re: fclean all
	@$(MAKE)

.PHONY: all clean fclean re
